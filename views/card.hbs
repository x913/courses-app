{{#if courses.length}}
<h1>Card</h1>
<div id="card">
    <table>
        <thead>
            <tr>
                <th>Course</th>
                <th>Count</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>{{price}}</td>
                <td><button class="btn btn-small js-remove" data-id="{{id}}" data-comment="{{title}}">X</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>
        {{!-- <strong>TOTAL PRICE:</strong> --}}
        <span class="price">{{price}}</span>
    </p>
    {{else}}
    <h1>Card is empty</h1>
    {{/if}}
</div>