<h1>Editing the course</h1>

<form action="/courses/edit" method="POST">

    <input type="hidden" name="id" value="{{course.id}}">

    <div class="input-field">
        <input id="title" type="text" class="validate" required name="title" value="{{course.title}}">
        <label for="title">Course Title</label>
        <span class="helper-text" data-error="Enter title"></span>
    </div>
    <div class="input-field">
        <input id="price" type="number" class="validate" required min="1" name="price" value="{{course.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Enter the price"></span>
    </div>
    <div class="input-field">
        <input id="image" type="text" class="validate" required name="image" value="{{course.image}}">
        <span class="helper-text" data-error="Choose an image"></span>
    </div>

    <button class="btn btn-primary">Save changes</button>

</form>